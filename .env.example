# Application
NODE_ENV=development
PORT=3000
HOST=localhost
API_URL=http://localhost:3000
CLIENT_URL=http://localhost:8081

# JWT Configuration
JWT_SECRET=your-secret-key-here
JWT_REFRESH_SECRET=your-refresh-secret-key-here
JWT_ACCESS_EXPIRY=30m
JWT_REFRESH_EXPIRY=7d

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_ATTEMPTS=5
SESSION_SECRET=your-session-secret-here
COOKIE_SECRET=your-cookie-secret-here
CORS_ORIGINS=http://localhost:8081
SECURE_COOKIES=false # Set to true in production

# Default Admin User
ADMIN_EMAIL=admin@imagencali.com
ADMIN_PASSWORD=admin123
ADMIN_ROLE=admin

# Database Configuration
DB_PATH=data/imagencali.db
DB_BACKUP_PATH=data/backups
DB_LOGGING=true
DB_POOL_MIN=1
DB_POOL_MAX=10
DB_IDLE_TIMEOUT=30000

# Logging
LOG_LEVEL=debug
LOG_FORMAT=dev # Use 'combined' in production
LOG_DIR=logs
ENABLE_REQUEST_LOGGING=true
ENABLE_AUDIT_LOGGING=true

# Cache Configuration
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600

# Cleanup Configuration
CLEANUP_INTERVAL=86400 # 24 hours in seconds
LOGIN_ATTEMPTS_RETENTION_DAYS=30
AUDIT_LOG_RETENTION_DAYS=90

# Error Reporting
SENTRY_DSN=your-sentry-dsn-here
ENABLE_ERROR_REPORTING=false # Set to true in production

# Performance
COMPRESSION_LEVEL=6
ENABLE_RESPONSE_CACHE=true
MAX_PAYLOAD_SIZE=10mb

# Development Tools
ENABLE_SWAGGER=true
ENABLE_GRAPHIQL=true
DEBUG=app:*

# Comments explaining each variable
# Application
# NODE_ENV: Environment mode (development/production/test)
# PORT: Server port number
# HOST: Server host
# API_URL: Backend API URL
# CLIENT_URL: Frontend client URL

# JWT Configuration
# JWT_SECRET: Secret key for JWT access tokens
# JWT_REFRESH_SECRET: Secret key for JWT refresh tokens
# JWT_ACCESS_EXPIRY: Access token expiration time
# JWT_REFRESH_EXPIRY: Refresh token expiration time

# Security
# BCRYPT_ROUNDS: Number of bcrypt hashing rounds
# RATE_LIMIT_WINDOW: Time window for rate limiting (minutes)
# RATE_LIMIT_MAX_ATTEMPTS: Maximum login attempts in window
# SESSION_SECRET: Secret for session management
# COOKIE_SECRET: Secret for cookie signing
# CORS_ORIGINS: Allowed CORS origins
# SECURE_COOKIES: Use secure cookies (HTTPS only)

# Default Admin User
# ADMIN_EMAIL: Default admin user email
# ADMIN_PASSWORD: Default admin user password
# ADMIN_ROLE: Default admin user role

# Database Configuration
# DB_PATH: SQLite database file path
# DB_BACKUP_PATH: Database backups directory
# DB_LOGGING: Enable database query logging
# DB_POOL_MIN: Minimum connection pool size
# DB_POOL_MAX: Maximum connection pool size
# DB_IDLE_TIMEOUT: Connection idle timeout

# Logging
# LOG_LEVEL: Logging level (debug/info/warn/error)
# LOG_FORMAT: Logging format
# LOG_DIR: Log files directory
# ENABLE_REQUEST_LOGGING: Enable HTTP request logging
# ENABLE_AUDIT_LOGGING: Enable user action audit logging

# Cache Configuration
# CACHE_TTL: Cache time-to-live in seconds
# CACHE_CHECK_PERIOD: Cache cleanup interval

# Cleanup Configuration
# CLEANUP_INTERVAL: Interval for cleanup tasks
# LOGIN_ATTEMPTS_RETENTION_DAYS: Days to keep login attempts
# AUDIT_LOG_RETENTION_DAYS: Days to keep audit logs

# Error Reporting
# SENTRY_DSN: Sentry.io DSN for error tracking
# ENABLE_ERROR_REPORTING: Enable external error reporting

# Performance
# COMPRESSION_LEVEL: Response compression level
# ENABLE_RESPONSE_CACHE: Enable response caching
# MAX_PAYLOAD_SIZE: Maximum request payload size

# Development Tools
# ENABLE_SWAGGER: Enable Swagger API documentation
# ENABLE_GRAPHIQL: Enable GraphiQL interface
# DEBUG: Debug namespaces
